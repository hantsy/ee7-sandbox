<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <factory>
        <exception-handler-factory>com.hantsylabs.example.ee7.taskboard.faces.DefaultExceptionHandlerFactory</exception-handler-factory>
    </factory>

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>zh</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>messages</var>
        </resource-bundle>
    </application>

    <lifecycle>
        <phase-listener>com.hantsylabs.example.ee7.taskboard.faces.MessageHandler</phase-listener>
        <phase-listener>com.hantsylabs.example.ee7.taskboard.faces.RequestLoggingPhaseListener</phase-listener>
    </lifecycle>
</faces-config>